from turtle import*
speed(0)

#This function illustrates the outline of flower type #1
def flowerone_outline(x,y,length):
  penup()
  setposition(x,y)
  pendown()
  color("black")
  for i in range(8):
    for i in range(2):
      forward(length*2)
      left(45)
      forward(length*2)
      left(135)
  right(45)
#This function illustrates the body colouring of flower type #1
def flowerone_body(x,y,length):
  penup()
  setposition(x,y)
  pendown()
  color("darkviolet")
  begin_fill()
  for i in range(2):
    if i <1:
      for i in range(8):
        for i in range(2):
          forward(length*2)
          left(45)
          forward(length*2)
          left(135)
    right(45)
  else:
  left(50)
  for i in range(8):
  for i in range(2):
  forward(length*1.5)
  left(45)
  forward(length*1.5)
  left(135)
  right(45)
  end_fill()
  begin_fill()
  color("violet")
  right(80)
  end_fill()
