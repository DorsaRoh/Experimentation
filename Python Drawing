#This function illustrates the speechbubble for the rainbow
def speechbubble_rainbow(x_value,y_value,var,bottom=15):
def speechbubble_body():
penup()
color(var)
setposition(x_value,y_value)
pendown()
begin_fill()
forward(bottom-3)
backward(bottom-3)
right(81)
forward(30)
right(218)
forward(30)
end_fill()
right(90)
backward(bottom)
begin_fill()
circle(70)
end_fill()
speechbubble_body()
def speechbubble_border():
left(26)
penup()
color("black")
setposition(x_value-3,y_value+4)
forward(bottom)
backward(bottom)
right(82)
pendown()
forward(35)
right(218)
forward(33)
right(90)
penup()
backward(bottom-1)
forward(bottom)
left(18)
pendown()
circle(71,345)
color(var)
pensize(5)
forward(10)
speechbubble_border()
#This function illustrates the rainbow's dialogue
def speech_rainbow(x,y):
penup()
setposition(-293,365)
pendown()
color("white")
write ("Do you ever", font = ("arial", 10, "normal"))
penup()
setposition(x-5,y-2.5)
pendown()
write ("wonder if, like, we're", font = ("arial", 10, "normal"))
penup()
setposition(x,y-25)
pendown()
write ("just the figment of", font = ("arial", 10, "normal"))
penup()
setposition(x+1,y-45)
pendown()
write ("someone else's", font = ("arial", 10, "normal"))
penup()
setposition(x+5,y-68)
pendown()
write ("imagination?", font = ("arial", 11, "bold"))
