#This function illustrates a sun
def sun(x,y,length,radius,a_value,b_value,c,d):
penup()
setposition(x,y)
color("gold")
pendown()
begin_fill()
for i in range(18):
circle(radius,180)
right(200)
end_fill()
penup()
right(90)
setposition(a_value,b_value)
pendown()
color("palegoldenrod")
begin_fill()
circle(radius*3-1)
end_fill()
penup()
left(90)
setposition(x,y)
color("black")
pendown()
for i in range(18):
circle(radius,180)
right(200)
penup()
setposition(c,d)
forward(radius*4)
pendown()
circle(radius*3)
penup()
