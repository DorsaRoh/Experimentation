#Defining a function that illustrates the rainbow
def rainbow(x_value,y_value,radius_value,pensize_value):
penup()
pensize(pensize_value)
# This portion of the function draws the red arc
setposition(x_value+5,y_value)
pendown()
left(90)
begin_fill()
color("tomato")
circle(radius_value,180)
setposition(x_value,y_value)
pendown()
x_value = x_value - pensize_value
radius_value = radius_value - pensize_value
end_fill()
# This portion of the function draws the orange arc
right(180)
begin_fill()
color("orange")
circle(radius_value,180)
setposition(x_value,y_value)
pendown()
x_value = x_value - pensize_value/2
radius_value = radius_value - pensize_value
end_fill()
# This portion of the function draws the yellow arc
right(180)
begin_fill()
color("gold")
circle(radius_value,180)
setposition(x_value,y_value)
pendown()
x_value = x_value - pensize_value/2
radius_value = radius_value - pensize_value
end_fill()
# This portion of the function draws the green arc
right(180)
begin_fill()
color("lawngreen")
circle(radius_value,180)
setposition(x_value,y_value)
pendown()
x_value = x_value - pensize_value
radius_value = radius_value - pensize_value
end_fill()
# This portion of the function draws the blue arc
right(180)
begin_fill()
color("mediumturquoise")
circle(radius_value,180)
setposition(x_value,y_value)
pendown()
x_value = x_value - pensize_value
radius_value = radius_value - pensize_value
end_fill()
# This portion of the function draws the purple arc
right(180)
begin_fill()
color("orchid")
circle(radius_value,180)
setposition(x_value,y_value)
pendown()
x_value = x_value - pensize_value
radius_value = radius_value - pensize_value
end_fill()
# This portion of the function draws the sky underneath the rainbow
right(180)
begin_fill()
color("lightsteelblue1")
circle(radius_value,180)
setposition(x_value,y_value)
penup()
x_value = x_value - pensize_value
radius_value = radius_value - pensize_value
end_fill()
penup()
setposition(-150,26)
pendown()
begin_fill()
circle(1)
end_fill()
penup()
pensize(3)
color("black")
setposition(-150,26)
backward(5)
forward(10)
def rainbow_border(x_value=-11, y_value=26,radius=185, semi=180):
for i in range(2):
left(90)
setposition(x_value,y_value)
pensize(2)
pendown()
left(90)
circle(radius, semi)
penup()
x_value = -55
radius = 125
