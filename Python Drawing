#This function illustrates a stem of a flower
def stem(length):
penup()
right(90)
forward(length/20)
pendown()
def custom_circle(length,angle,curve):
for i in range(curve):
forward(length)
if i % 2 == 0:
right(angle)
custom_circle(3,5,5)
left(2)
custom_circle(3,5,5)
#PANELS
def panel_colour():
#To fill in the panels with colour
begin_fill()
pendown()
color("lightsteelblue1")
forward(400)
left(90)
forward(400)
left(90)
forward(400)
left(90)
forward(400)
end_fill()
#To add borders/outline to panels
def panel_border():
pendown()
color("black")
for i in range(4):
left(90)
forward(400)
def panels():
penup()
setposition(-400,-400)
pensize(2.5)
panel_colour()
setposition(-400,-400)
panel_border()
penup()
setposition(-400,420)
panel_colour()
setposition(-400,420)
panel_border()
#CLOUDS
def white_circle(radius, cloudcolor):
color(cloudcolor)
begin_fill()
circle(radius)
end_fill()
radius = 25
cloudcolor="white"
#Defining the functions to draw the clouds
def cloud_body(x,y):
penup()
setposition(x,y)
pendown()
white_circle(radius, cloudcolor)
forward(radius)
for i in range(4):
white_circle(radius,cloudcolor)
right(90)
def cloud_border(x,y):
penup()
color("black")
setposition(x,y)
pendown()
circle(26)
forward(25)
for i in range(4):
circle(26)
right(90)
def cloud_eyes_panel_one(x_value,y_value):
penup()
setposition(x_value,y_value)
color("black")
#Cloud pupils:
for i in range(2):
pendown()
begin_fill()
circle(7)
end_fill()
penup()
forward(20)
setposition(x_value+3,y_value+5)
for i in range(2):
pendown()
circle(10)
penup()
forward(20)
def cloud_eyes_panel_two(x_value,y_value):
