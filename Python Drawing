#These defined functions illustrate a speechbubble
def speechbubble_cloud(x_value,y_value,colorvar,bottom=15):
def speechbubble_body():
penup()
pensize(2)
color(colorvar)
setposition(x_value,y_value)
pendown()
begin_fill()
forward(bottom)
backward(bottom)
right(81)
forward(32)
right(218)
forward(30)
end_fill()
right(90)
backward(bottom)
begin_fill()
circle(45)
end_fill()
speechbubble_body()
def speechbubble_border():
left(32)
penup()
color("black")
setposition(x_value,y_value)
forward(bottom)
backward(bottom)
right(82)
pendown()
forward(33)
right(218)
forward(30)
right(90)
penup()
backward(bottom-1)
forward(bottom)
left(18)
pendown()
circle(46.5,337)
color(colorvar)
pensize(5)
forward(10)
speechbubble_border()
#This function illustrates the dialogue of cloud #1
def speech_cloudtwo_panelone():
penup()
setposition(-162.5,385)
pendown()
color("white")
write ("Totally.", font = ("arial", 10, "italic"))
penup()
setposition(-162.5,367.5)
pendown()
write ("Like an", font = ("arial", 10, "normal"))
penup()
setposition(-162.5,350)
pendown()
write ("optical", font = ("arial", 10, "bold"))
penup()
setposition(-162.5,332.5)
pendown()
write ("illusion!", font = ("arial", 10, "bold"))
#This function illustrates hill #1, found at the bottom of each panel
def hill_one(x,y,length,angle,curve):
#border
penup()
color("black")
right(90)
setposition(x,y)
pendown()
for i in range(curve):
forward(length)
if i % 2 == 0:
right(angle)
def hillone_coloring(x,y,length,angle,curve):
penup()
left(20)
setposition(x-1,y-3)
pendown()
color("chartreuse3")
begin_fill()
for i in range(curve):
forward(length)
if i % 2 == 0:
right(angle)
right(70)
forward(10)
right(90)
forward(233)
right(90)
forward(50)
end_fill()
